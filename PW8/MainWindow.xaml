<Window x:Class="PrototypePW8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrototypePW8"
        mc:Ignorable="d"
        Title="MainWindow" Height="327" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Actions" Focusable="False">
                <MenuItem Header="Save Data"/>
                <MenuItem Header="Open Data File"/>
                <MenuItem Header="Compare Data"/>
                <MenuItem Header="Copy Data"/>
            </MenuItem>
            <MenuItem Header="Exit" Click="Exit_Click" Focusable="False"/>
            <MenuItem Header="About Program" Click="AboutProgram_Click" Focusable="False"/>
        </Menu>
        <DataGrid Margin="10,23,180,137"/>
        <GroupBox Header="Data Control" HorizontalAlignment="Left" Height="136" Margin="617,23,0,0" VerticalAlignment="Top" Width="165">
            <Grid>
                <Button Content="Save Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="133"/>
                <Button Content="Open Data File" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="133"/>
                <Button Content="Compare Data" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="133"/>
                <Button Content="Copy Data" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="133"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Basic Oppotunities" HorizontalAlignment="Left" Height="111" Margin="617,164,0,0" VerticalAlignment="Top" Width="165">
            <Grid>
                <Button Content="Support" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="133"/>
                <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="133" IsCancel="True" Click="Exit_Click"/>
                <Button x:Name="AboutProgram" Content="About Program" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="133" Click="AboutProgram_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
